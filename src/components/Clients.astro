---
const logos = [1, 2, 3, 4, 5, 6, 7];
---

<section class="py-12 md:py-16 px-4 md:px-[144px]">
  <div class="max-w-[1440px] mx-auto flex flex-col items-center gap-4 md:gap-8">
    <!-- Section Title -->
    <div class="text-center w-full max-w-[1110px]">
      <h2 class="text-2xl md:text-[36px] font-semibold text-[#4D4D4D] leading-[44px] mb-2">
        Our Clients
      </h2>
      <p class="text-base text-[#717171]">
        We have been working with some Fortune 500+ clients
      </p>
    </div>

    <!-- Client Logos -->
    <div class="w-full flex flex-wrap items-center justify-center gap-4 md:gap-8 md:justify-between">
      {logos.map((i) => (
        <div class="w-12 h-12 md:w-12 md:h-12 bg-[#F5F7FA] rounded-lg flex items-center justify-center">
          <img 
            src={`https://placehold.co/40x40?text=Logo${i}`}
            alt={`Client logo ${i}`}
            class="w-10 h-10 object-contain"
          />
        </div>
      ))}
    </div>
  </div>
</section>

