<section class="bg-[#F5F7FA] px-4 py-12 md:px-[144px] md:py-16">
  <div
    class="mx-auto flex max-w-[1440px] flex-col items-center justify-between gap-8 md:flex-row md:gap-16"
  >
    <!-- Left Content -->
    <div class="flex flex-1 flex-col gap-2">
      <h2
        class="text-2xl leading-[44px] font-semibold text-[#4D4D4D] md:text-[36px]"
      >
        Helping a local <span class="text-[#4CAF4F]"
          >business reinvent itself</span
        >
      </h2>
      <p class="text-base text-[#18191F]">
        We reached here with our hard work and dedication
      </p>
    </div>

    <!-- Right Content - Stats -->
    <div class="grid flex-1 grid-cols-2 gap-6 md:gap-8">
      <!-- Stat 1: Members -->
      <div class="flex items-center gap-4">
        <div class="h-12 w-12 flex-shrink-0">
          <img
            src="https://placehold.co/48x48?text=Icon"
            alt="Members icon"
            class="h-full w-full object-contain"
          />
        </div>
        <div>
          <p
            class="text-xl leading-[36px] font-bold text-[#4D4D4D] md:text-[28px]"
          >
            2,245,341
          </p>
          <p class="text-base text-[#717171]">Members</p>
        </div>
      </div>

      <!-- Stat 2: Clubs -->
      <div class="flex items-center gap-4">
        <div class="h-12 w-12 flex-shrink-0">
          <img
            src="https://placehold.co/48x48?text=Icon"
            alt="Clubs icon"
            class="h-full w-full object-contain"
          />
        </div>
        <div>
          <p
            class="text-xl leading-[36px] font-bold text-[#4D4D4D] md:text-[28px]"
          >
            46,328
          </p>
          <p class="text-base text-[#717171]">Clubs</p>
        </div>
      </div>

      <!-- Stat 3: Event Bookings -->
      <div class="flex items-center gap-4">
        <div class="h-12 w-12 flex-shrink-0">
          <img
            src="https://placehold.co/48x48?text=Icon"
            alt="Event Bookings icon"
            class="h-full w-full object-contain"
          />
        </div>
        <div>
          <p
            class="text-xl leading-[36px] font-bold text-[#4D4D4D] md:text-[28px]"
          >
            828,867
          </p>
          <p class="text-base text-[#717171]">Event Bookings</p>
        </div>
      </div>

      <!-- Stat 4: Payments -->
      <div class="flex items-center gap-4">
        <div class="h-12 w-12 flex-shrink-0">
          <img
            src="https://placehold.co/48x48?text=Icon"
            alt="Payments icon"
            class="h-full w-full object-contain"
          />
        </div>
        <div>
          <p
            class="text-xl leading-[36px] font-bold text-[#4D4D4D] md:text-[28px]"
          >
            1,926,436
          </p>
          <p class="text-base text-[#717171]">Payments</p>
        </div>
      </div>
    </div>
  </div>
</section>

